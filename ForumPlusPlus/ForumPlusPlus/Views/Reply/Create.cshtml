@model PostReplyViewModel

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading">
            Reply to: @Model.PostTitle | The post is in @Model.ForumName Topic
            <span id="headingBtn">
                <a asp-controller="Post"
                   asp-action="Index"
                   asp-route-postId="@Model.PostId"
                   class="btn btn-back">
                    <span class="glyphicon glyphicon-chevron-left"></span> Back to post
                </a>
            </span>
        </div>
    </div>
    <div class="row">
        <div  id="originalPost">
            <h3>@Model.PostTitle</h3>
            <p>@Model.PostContent</p>
        </div>
    </div>
    <div class="row" style="margin:0px">
        <div id="replyToPostSection" class="col-md-9">
            <form asp-action="AddReply" method="post" id="addPostForm">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ReplyContent"><h3>Reply:</h3></label>
                    <textarea asp-for="ReplyContent"
                              rows="10"
                              
                              class="form-control"
                              placeholder="Your reply...">
                    </textarea>
                    <span asp-validation-for="ReplyContent" class="text-danger"></span>
                </div>
                <button type="submit" id="submitReplyBtn" class="btn btn-submitPost">Submit Reply</button>
                <input asp-for="AuthorId" hidden />
                <input asp-for="PostId" hidden />
                <input asp-for="ForumId" hidden />
            </form>
        </div>
    </div>
</div>